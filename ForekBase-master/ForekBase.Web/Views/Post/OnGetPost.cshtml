                            <li class="sidebar-item">
                                <a href="#" class="sidebar-link">Forgot Password</a>
                            </li>
                        </ul>
                    </li>

                </ul>
            </div>
        </aside>
        <!---------------------------------------------------End of sidebar----------------------------------------------------->
        <!---------------------------------------------------Begining of the body----------------------------------------------------->
        <div class="main">
            <nav class="navbar navbar-expand px-3 border-bottom">
                <button class="btn" id="sidebar-toggle" type="button">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse navbar">
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a href="#" data-bs-toggle="dropdown" class="nav-icon pe-md-0">
                                <img src="image/profile.jpg" class="avatar img-fluid rounded" alt="">
                            </a>
                            <div class="dropdown-menu dropdown-menu-end">
                                <a href="#" class="dropdown-item">Profile</a>
                                <a href="#" class="dropdown-item">Setting</a>
                                <a href="#" class="dropdown-item">Logout</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="content px-3 py-2">
                <div class="container-fluid">
                    <div class="mb-3">
                        <h4>Post Information</h4>
                    </div>

                    <!-- Table Element -->

                    <form asp-action="OnGetPost" enctype="multipart/form-data">

                        <div class="form-group col-md-12 mt-1">

                            <a href="@Url.Action("OnUpdatePost", "Post", new { PostId = @Model.PostId})" class="btn btn-primary ">
                                <span><i class="fa bi-folder2-open"></i>Update</span>
                            </a>
                           
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#publishModal">
                                Publish
                            </button>

                            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                Delete
                            </button>
                        </div>

                        <div class="container mt-5">
                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-md-12">
                                    <!-- Image Upload Box -->
                                    <div class="card">
                                        <div class="card-body">

                                            <h5 class="card-title">Image Description</h5>

                                            <input type="text" asp-for="ImageDescription_1" readonly class="form-control mb-2" placeholder="Image Description">

                                            <h5 class="card-title">Image Source</h5>

                                            <input type="text" asp-for="ImageSource_1" readonly class="form-control mb-2" placeholder="Image Source">

                                            <h5 class="card-title">Image Description</h5>

                                            <input type="text" asp-for="ImageDescription_2" readonly class="form-control mb-2" placeholder="Image Description">

                                            <h5 class="card-title">Image Source</h5>

                                            <input type="text" asp-for="ImageSource_2" readonly class="form-control mb-2" placeholder="Image Source">

                                            <hr />

                                            <h5 class="card-title">Image Description</h5>

                                            <input type="text" asp-for="ImageDescription_3" readonly class="form-control mb-2" placeholder="Image Description">

                                            <h5 class="card-title">Image Source</h5>

                                            <input type="text" asp-for="ImageSource_3" readonly class="form-control mb-2" placeholder="Image Source">

                                            <h5 class="card-title">Block Quote</h5>
                                            <textarea asp-for="BlockQuote" class="form-control mb-2" readonly placeholder="Block Quote"></textarea>


                                            <h5 class="card-title">Category</h5>
                                            <input asp-for="Category" readonly class="form-control mb-2">
                                            <!-- Text Boxes for Story -->
                                            <h5 class="card-title">Title</h5>
                                            <input type="text" asp-for="Title" readonly class="form-control mb-2">
                                            <h5 class="card-title">Article</h5>
                                            

                                            @* <div class="cont">
                                                <div id="editor" contenteditable="false">
                                                    <section id="toolbar">

                                                        <div id="bold" class="icon fa fa-bold"></div>
                                                        <div id="italic" class="icon fa fa-italic"></div>

                                                        <div id="createLink" class="icon fa fa-link"></div>
                                                        <div id="insertUnorderedList" class="icon fa fa-list"></div>
                                                        <div id="insertOrderedList" class="icon fa fa-list-ol"></div>
                                                        <div id="justifyLeft" class="icon fa fa-align-left"></div>
                                                        <div id="justifyRight" class="icon fa fa-align-right"></div>
                                                        <div id="justifyCenter" class="icon fa fa-align-center"></div>
                                                        <div id="justifyFull" class="icon fa fa-align-justify"></div>

                                                    </section>

                                                    <div id="page" contenteditable="true">
                                                        @Html.Raw(Model.Description)
                                                    </div>

                                                </div> *@

                                            <textarea asp-for="Description" readonly name="Description" class="form-control mb-2" rows="24" cols="50" placeholder="News Title"></textarea>

                                        </div>
                                    </div>
                                </div>

  
                                <div class="col-md-4">
                                    <div class="card mb-3 body">
                                        <div class="card-body mb-4">
                                            <img id="output" src="~/Docs/@Model.FirstFile" class="form-control" />
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-4">
                                    <div class="card mb-3 body">
                                        <div class="card-body mb-4">
                                            <img id="output" src="~/Docs/@Model.SecondFile" class="form-control" />
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-4">
                                    <div class="card mb-3 body">
                                        <div class="card-body mb-4">
                                            <img id="output" src="~/Docs/@Model.ThirdFile" class="form-control" />
                                        </div>
                                    </div>
                                </div>


                            </div>

                        </div>

                    </form>
                </div>
            </main>
            <a href="#" class="theme-toggle">
                <i class="fa-regular fa-moon"></i>
                <i class="fa-regular fa-sun"></i>
            </a>
            <footer class="footer">
                <div class="container-fluid">
                    <div class="row text-muted">
                        <div class="col-6 text-start">
                            <p class="mb-0">
                                <a href="#" class="text-muted">
                                    <strong>The people's eye</strong>
                                </a>
                            </p>
                        </div>
                        <div class="col-6 text-end">
                            <ul class="list-inline">
                                <li class="list-inline-item">
                                    <a href="#" class="text-muted">Contact</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="text-muted">About Us</a>
                                </li>
                                <li class="list-inline-item">
                                    <a href="#" class="text-muted">Terms</a>
                                </li>

                            </ul>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
    </div>


    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Delete Post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are sure you want to delete this post?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="@Url.Action("OnRemovePost", "Post", new { PostId = @Model.PostId})" class="btn btn-danger ">
                        <span><i class="fa bi-folder2-open"></i>Delete</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="publishModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Publish Post</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Are sure you want to publish this post?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <a href="@Url.Action("OnPublishPost", "Post", new { PostId = @Model.PostId})" class="btn btn-danger ">
                        <span><i class="fa bi-folder2-open"></i>Publish</span>
                    </a>
                </div>
            </div>
        </div>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/utility/assets/js/post/post.js"></script>
    <script src="https://kit.fontawesome.com/ae3393d1fa.js" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script type="text/javascript" src="//cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js"></script>
    <script src="~/utility/assets/js/RichText/Index.js"></script>

</body>

</html>

