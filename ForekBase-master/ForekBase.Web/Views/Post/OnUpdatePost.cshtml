            <main class="content px-3 py-2">
                <div class="container-fluid">
                    <div class="mb-3">
                        <h4>Update Post</h4>
                    </div>

                    <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#publishModal">
                        Publish
                    </button>

                    <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        Delete
                    </button>
                    <!-- Table Element -->

                    <form asp-action="OnUpdatePost" enctype="multipart/form-data">
                        <div class="container mt-5">
                            <div class="row">
                                <!-- Left Column -->
                                <div class="col-md-12 ">
                                    <!-- Image Upload Box -->
                                    <div class="card text-wrap:normal">
                                        <div class="card-body">
                                            <h5 class="card-title">Upload Image</h5>
                                            <!-- Your image upload form or input can go here -->

                                            <input asp-for="PostId" hidden />

                                            <input asp-for="CreatedBy" hidden />

                                            <input asp-for="CreatedOn" hidden />

                                            <input asp-for="FirstFile"  accept="image/*,.pdf" class="form-control border-0 shadow mb-2" onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />

                                            <h5 class="card-title">Image Description</h5>

                                            <input type="text" asp-for="ImageDescription_1"  class="form-control mb-2" placeholder="Image Description">

                                            <h5 class="card-title">Image Source</h5>

                                            <input type="text" asp-for="ImageSource_1"  class="form-control mb-2" placeholder="Image Source">


                                            <br />

                                            <h6 class="card-title text-danger">Do you want to add more file(s)?</h6>

                                            <div class="row mt-4">

                                                <div class="input-group mb-3 input1">
                                                    <div class="form-check">
                                                        <label class="form-check-label" for="isFileYes">Yes</label>

                                                        <input type="radio" asp-for="IsAddFile" class="form-check-input m-1" value="true" id="isFileYes" required />

                                                    </div>
                                                    <div class="form-check">
                                                        <label class="form-check-label" for="isFileNo">No</label>
                                                        <input type="radio" asp-for="IsAddFile" class="form-check-input m-1" value="false" id="isFileNo" required />

                                                    </div>
                                                </div>
                                            </div>

                                            <div id="newFile">

                                                <input asp-for="SecondFile" accept="image/*,.pdf" class="form-control border-0 shadow mb-2" onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />

                                                <h5 class="card-title">Image Description</h5>

                                                <input type="text" asp-for="ImageDescription_2" class="form-control mb-2" placeholder="Image Description">

                                                <h5 class="card-title">Image Source</h5>

                                                <input type="text" asp-for="ImageSource_2" class="form-control mb-2" placeholder="Image Source">

                                                <hr />

                                                <input asp-for="ThirdFile" accept="image/*,.pdf" class="form-control border-0 shadow mb-2" onchange="document.getElementById('output').src = window.URL.createObjectURL(this.files[0])" />

                                                <h5 class="card-title">Image Description</h5>

                                                <input type="text" asp-for="ImageDescription_3" class="form-control mb-2" placeholder="Image Description">

                                                <h5 class="card-title">Image Source</h5>

                                                <input type="text" asp-for="ImageSource_3" class="form-control mb-2" placeholder="Image Source">


                                            </div>

                                            <br />

                                            <h5 class="card-title">Category</h5>

                                            <select asp-for="Category" class="form-control Type" asp-items="Html.GetEnumSelectList<eCategory>()">
                                                <option selected="selected" disabled value="">--Select--</option>
                                            </select>

                                            <br />
                                            <!-- Text Boxes for Story -->
                                            <h5 class="card-title">Title</h5>
                                            <input type="text" asp-for="Title"  class="form-control mb-2" placeholder="News Title">

                                            <h5 class="card-title">Block Quote</h5>
                                            <textarea asp-for="BlockQuote" class="form-control mb-2" placeholder="Block Quote"></textarea>

                                            <h5 class="card-title">Article</h5>

                                            <textarea id="mytextarea" asp-for="Description" name="Description" class="form-control mb-2" placeholder="Article"></textarea>

                                           
                                        </div>
                                    </div>

                                </div>


                                <div class="col-md-4">
                                    <div class="card mb-3 body">
                                        <div class="card-body mb-4">
                                            <img id="output" src="~/Docs/@Model.FirstFile" class="form-control" />
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-4">
                                    <div class="card mb-3 body">
                                        <div class="card-body mb-4">
                                            <img id="output" src="~/Docs/@Model.SecondFile" class="form-control" />
                                        </div>
                                    </div>
                                </div>


                                <div class="col-md-4">
                                    <div class="card mb-3 body">
                                        <div class="card-body mb-4">
                                            <img id="output" src="~/Docs/@Model.ThirdFile" class="form-control" />
                                        </div>
                                    </div>
                                </div>


                            </div>

                            <div class="form-group col-md-12 mt-1">
                                <button type="submit" onclick="getContent();" class="btn btn-success save"><i class="fa fa-save"></i>Update</button>
                                <a class="btn btn-outline-danger float-end" asp-action="Index" asp-controller="Home"><i class="fa fa-window-close"></i> Exit</a>
                            </div>

                        </div>
                    </form>
                    
                </div>
            </main>
