@model ForekBase.Web.ViewModels.SubscriberVM
@using ForekBase.Domain.Entities.Enums

<style>
    .subscribe-form input {
    width: 100%;
    height: 33px;
    border: #9f9f9f solid 1px;
    background: #fff;
    padding: 0 3%;
    margin: 0;
  }

  .subscribe-form .sub-btn input {
    width: 100%;
    padding: 0;
    margin: 10px 0 0 0;
    border: #f6a704 solid 1px;
    height: 33px;
    background: none;
    color: #f6a704;
    cursor: pointer;
    float: left;
  }

@@media only screen and (max-width: 768px) {
    .g-recaptcha {
      margin-top: 20px;
    }
    .subscribe-form .col-xs-12 {
      padding-right: 0px;
      padding-left: 0px;
    }
    .subscribe-form .row {
      margin-left: 0;
      margin-right: 0;
    }
  }

@@media only screen and (min-width: 768px) {
    .subscribe-form div[class*='col-xs-'] {
      padding-left: 0;
    }
    .subscribe-form .row {
      margin-left: 0;
      margin-right: 15px;
    }
  }
</style>



<br />
<br />

<div id="section38" class="page latest-news">
    <div class="container">
        <div class="news-right">
            <h2>Subscribe to our newsletter.</h2>
            <p class="receive">Receive the latest news and growing information from The People's Eye.</p>
            <p>News updates |  Access to exclusive content</p>
            <div class="cl"></div>
            <div class="subscribe-form">
                <form asp-action="OnCreateSubscriber">
                    <div class="row">
                        <div class="col-xs-12 col-sm-6">
                            <div class="col-xs-12">
                            <input type="email" asp-for="Email" required class="form-control mb-2" placeholder="Email"><br/>
                                <div id="email-error" style="color: red; display: none;"></div>
                                <h5 class="card-title">Category</h5>

                                <select asp-for="Category" class="form-control Type" required asp-items="Html.GetEnumSelectList<eCategory>()">
                                    <option selected="selected" disabled value="">--Select--</option>
                                </select>
                                <br />
                            </div>
                            <br />
                            <div class="col-xs-12 sub-btn">
                            <button type="submit" class="btn btn-success save">Subscribe</button>
                            <a class="btn btn-outline-danger float-end" asp-action="Index" asp-controller="Home"><i class="fa fa-window-close"></i> Exit</a>
                               
                            </div>
                        </div>
                        
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<br />
